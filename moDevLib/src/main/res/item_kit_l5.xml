<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_4dp"
        app:cardCornerRadius="@dimen/_2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/lin_controler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:orientation="vertical"
            android:padding="@dimen/_2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="auto"
                android:orientation="horizontal"
                android:paddingStart="@dimen/_2dp">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:gravity="center|start"
                    android:text="Level 5"
                    android:textColor="@color/text_dark"
                    android:textSize="@dimen/_7sp" />

                <CheckBox
                    android:id="@+id/cb_show_hide"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_15dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_up_down"
                    android:button="@null"
                    android:clickable="false" />

                <ImageView
                    android:id="@+id/iv_lock"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_5dp"
                    android:layout_gravity="top|end"
                    android:layout_weight="0.25"
                    app:srcCompat="@drawable/ic_group_1" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_data"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/editTextTextPersonName2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/shape_dialog_background"
                        android:backgroundTint="@color/text_light"
                        android:ems="10"
                        android:hint="@string/search"
                        android:imeOptions="actionUnspecified|actionNext"
                        android:inputType="textPersonName"
                        android:paddingStart="@dimen/_5dp"
                        android:paddingTop="@dimen/_5dp"
                        android:paddingEnd="@dimen/_5dp"
                        android:paddingBottom="@dimen/_5dp"
                        android:textColor="@color/text_dark"
                        android:textColorHint="@color/text_dark"
                        android:textSize="@dimen/_7dp"
                        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior" />

                    <EditText
                        android:id="@+id/editTextTextPersonName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_2dp"
                        android:layout_marginEnd="@dimen/_2dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_dialog_background"
                        android:backgroundTint="@color/text_light"
                        android:ems="10"
                        android:hint="@string/search"
                        android:imeOptions="actionUnspecified|actionNext"
                        android:inputType="textPersonName"
                        android:paddingStart="@dimen/_5dp"
                        android:paddingTop="@dimen/_5dp"
                        android:paddingEnd="@dimen/_5dp"
                        android:paddingBottom="@dimen/_5dp"
                        android:textColor="@color/text_dark"
                        android:textColorHint="@color/text_dark"
                        android:textSize="@dimen/_7dp"
                        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/shape_dialog_background"
                        android:backgroundTint="@color/text_light"
                        android:ems="10"
                        android:hint="@string/search"
                        android:imeOptions="actionUnspecified|actionNext"
                        android:inputType="textPersonName"
                        android:paddingStart="@dimen/_5dp"
                        android:paddingTop="@dimen/_5dp"
                        android:paddingEnd="@dimen/_5dp"
                        android:paddingBottom="@dimen/_5dp"
                        android:textColor="@color/text_dark"
                        android:textColorHint="@color/text_dark"
                        android:textSize="@dimen/_7dp"
                        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_2dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/editTextTextPersonName3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/shape_dialog_background"
                        android:backgroundTint="@color/text_light"
                        android:ems="10"
                        android:hint="@string/search"
                        android:imeOptions="actionUnspecified|actionNext"
                        android:inputType="textPersonName"
                        android:paddingStart="@dimen/_5dp"
                        android:paddingTop="@dimen/_5dp"
                        android:paddingEnd="@dimen/_5dp"
                        android:paddingBottom="@dimen/_5dp"
                        android:textColor="@color/text_dark"
                        android:textColorHint="@color/text_dark"
                        android:textSize="@dimen/_7dp"
                        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior" />

                    <EditText
                        android:id="@+id/editTextTextPersonName4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_2dp"
                        android:layout_marginEnd="@dimen/_2dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_dialog_background"
                        android:backgroundTint="@color/text_light"
                        android:ems="10"
                        android:hint="@string/search"
                        android:imeOptions="actionUnspecified|actionNext"
                        android:inputType="textPersonName"
                        android:paddingStart="@dimen/_5dp"
                        android:paddingTop="@dimen/_5dp"
                        android:paddingEnd="@dimen/_5dp"
                        android:paddingBottom="@dimen/_5dp"
                        android:textColor="@color/text_dark"
                        android:textColorHint="@color/text_dark"
                        android:textSize="@dimen/_7dp"
                        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior" />

                    <EditText
                        android:id="@+id/editTextTextPersonName5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_2dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_dialog_background"
                        android:backgroundTint="@color/text_light"
                        android:ems="10"
                        android:hint="@string/search"
                        android:imeOptions="actionUnspecified|actionNext"
                        android:inputType="textPersonName"
                        android:paddingStart="@dimen/_5dp"
                        android:paddingTop="@dimen/_5dp"
                        android:paddingEnd="@dimen/_5dp"
                        android:paddingBottom="@dimen/_5dp"
                        android:textColor="@color/text_dark"
                        android:textColorHint="@color/text_dark"
                        android:textSize="@dimen/_7dp"
                        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior" />

                    <RadioGroup
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/shape_dialog_background"
                        android:backgroundTint="@color/text_light"
                        android:orientation="horizontal"
                        android:padding="@dimen/_1dp">

                        <RadioButton
                            android:id="@+id/radioButton3"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/selector_radio"
                            android:button="@null"
                            android:checked="true"
                            android:text="good"
                            android:textAlignment="center"
                            android:textColor="@color/color_radio"
                            android:textSize="@dimen/_5sp" />

                        <RadioButton
                            android:id="@+id/radioButton2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/selector_radio"
                            android:button="@null"
                            android:text="good"
                            android:textAlignment="center"
                            android:textColor="@color/color_radio"
                            android:textSize="@dimen/_5sp" />

                        <RadioButton
                            android:id="@+id/radioButton"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/selector_radio"
                            android:button="@null"
                            android:text="good"
                            android:textAlignment="center"
                            android:textColor="@color/color_radio"
                            android:textSize="@dimen/_5sp" />
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/editTextTextPersonName6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/shape_dialog_background"
                        android:backgroundTint="@color/text_light"
                        android:ems="10"
                        android:hint="@string/search"
                        android:imeOptions="actionUnspecified|actionNext"
                        android:inputType="textPersonName"
                        android:paddingStart="@dimen/_5dp"
                        android:paddingTop="@dimen/_5dp"
                        android:paddingEnd="@dimen/_5dp"
                        android:paddingBottom="@dimen/_5dp"
                        android:textColor="@color/text_dark"
                        android:textColorHint="@color/text_dark"
                        android:textSize="@dimen/_7dp"
                        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior" />

                    <EditText
                        android:id="@+id/editTextTextPersonName7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_2dp"
                        android:layout_marginEnd="@dimen/_2dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_dialog_background"
                        android:backgroundTint="@color/text_light"
                        android:ems="10"
                        android:hint="@string/search"
                        android:imeOptions="actionUnspecified|actionNext"
                        android:inputType="textPersonName"
                        android:paddingStart="@dimen/_5dp"
                        android:paddingTop="@dimen/_5dp"
                        android:paddingEnd="@dimen/_5dp"
                        android:paddingBottom="@dimen/_5dp"
                        android:textColor="@color/text_dark"
                        android:textColorHint="@color/text_dark"
                        android:textSize="@dimen/_7dp"
                        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior" />

                    <EditText
                        android:id="@+id/editTextTextPersonName8"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/shape_dialog_background"
                        android:backgroundTint="@color/text_light"
                        android:ems="10"
                        android:hint="@string/search"
                        android:imeOptions="actionDone|actionUnspecified"
                        android:inputType="textPersonName"
                        android:paddingStart="@dimen/_5dp"
                        android:paddingTop="@dimen/_5dp"
                        android:paddingEnd="@dimen/_5dp"
                        android:paddingBottom="@dimen/_5dp"
                        android:textColor="@color/text_dark"
                        android:textColorHint="@color/text_dark"
                        android:textSize="@dimen/_7dp"
                        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>