        <item name="android:backgroundTint">@color/primary</item> <!-- FAB background color -->
        <item name="tint">@color/white</item> <!-- FAB icon color -->
        <item name="shapeAppearance">@style/ShapeAppearance.MyApplication.FAB</item> <!-- Custom shape -->
