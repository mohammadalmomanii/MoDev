<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="modev.styleSheetBottom" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomSheetStyleBottom</item>
        <item name="android:background">@color/transparent</item>
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/primary_light</item>
        <item name="android:windowSoftInputMode">adjustResize|stateAlwaysVisible</item>
        <item name="popupMenuBackground">@drawable/shape_rounded_4</item>

        <!-- Secondary brand color. -->

    </style>

    <style name="CustomSheetStyleBottom" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="popupMenuBackground">@drawable/shape_rounded_4</item>
    </style>
</resources>
