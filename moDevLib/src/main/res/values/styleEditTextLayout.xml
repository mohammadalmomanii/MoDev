<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- EditTextInputLayoutStyle -->
    <style name="modev.styleEditTextLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Set initial box stroke color -->
        <item name="boxStrokeColor">@color/primary</item>
        <item name="hintTextColor">@color/selector_primary_black</item>
        <item name="android:textColorHint">@color/selector_primary_black</item>
        <item name="endIconMode">clear_text</item>
        <item name="endIconTint">@color/primary</item>
        <!-- Additional attributes for TextInputLayout -->
        <item name="boxStrokeWidth">@dimen/_1mdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_6mdp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_6mdp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_6mdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_6mdp</item>
        <item name="android:textColor">@color/selector_primary_black</item>
        <item name="helperTextTextAppearance">@style/HelperTextAppearance</item>
        <!-- Add any other TextInputLayout attributes as needed -->
        <item name="counterEnabled">true</item>
        <item name="counterMaxLength">25</item>
    </style>

    <!-- HelperTextAppearance -->
    <style name="HelperTextAppearance" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/primary</item>
    </style>

    <!-- EditTextStyle -->
    <style name="EditTextStyle" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <!-- Use a selector for the box stroke color -->
        <item name="boxStrokeColor">@drawable/selector_edittext_box_stroke_color</item>
        <item name="android:textColor">@color/selector_primary_black</item>
        <item name="android:maxLength">25</item>

        <!-- Additional attributes for TextInputEditText -->
        <item name="android:strokeWidth">@dimen/_3mdp</item>
        <item name="textAllCaps">true</item>

        <!-- IME options for handling input method actions -->
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">text</item>

        <!-- Add any other TextInputEditText attributes as needed -->
    </style>

</resources>
