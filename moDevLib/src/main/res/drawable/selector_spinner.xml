<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
  >
    <item

        >
        <shape android:tint="@color/white">
            <corners android:radius="@dimen/_4mdp" />
        </shape>
    </item>
    <item
        android:width="@dimen/_10mdp"
        android:height="@dimen/_10mdp"
        android:end="@dimen/_2mdp"
        android:gravity="end|center"
        android:start="@dimen/_5mdp">
        <selector android:enterFadeDuration="200"
            android:exitFadeDuration="600">
            <item
                android:drawable="@drawable/ic_arrow_down"
                android:state_window_focused="true">

            </item>
            <item
                android:drawable="@drawable/ic_arrow_up"
                android:state_window_focused="false">

            </item>

        </selector>
    </item>
</layer-list>