<?xml version="1.0" encoding="UTF-8" ?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data></data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Custom SwipeRefreshView (AppBarLayout) -->
        <com.mohammadalmomani.modevlib.support.SwipeRefreshView
            android:id="@+id/refresh_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:gifSrc="@drawable/ic_menu_camera"/>

        <!-- Content Layout BELOW SwipeRefreshView -->
        <LinearLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_behavior="com.mohammadalmomani.modevlib.support.SwipeRefreshViewBehavior">

            <TextView
                android:id="@+id/asas"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="This is below SwipeRefreshView" />

        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>